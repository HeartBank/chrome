{
  "manifest_version": 2,

  "name": "HeartBankÂ®",
  "author": "Thon Ly",
  "description": "Thank with HeartBank",
  "version": "0.0.1",
  "default_locale": "en",
  "offline_enabled": false,

  "icons": {
    "16": "icons/hb16.png",
    "48": "icons/hb48.png",
    "128": "icons/hb128.png"
  },

  "omnibox": {
    "keyword" : "hb"
  },

  "browser_action": {
    "default_icon": "icons/heartbank.png",
    "default_popup": "omnibox/heartbank.html",
    "default_title": "Family Bank"
  },

  "background": {
    "scripts": ["pages/heartbank.js"],
    "persistent": false
  },

  "options_page": "pages/heartbank.html",

  "options_ui": {
    "page": "omnibox/login.html",
    "chrome_style": false
  },

  "tts_engine": {
    "voices": [{
      "voice_name": "Alice",
      "lang": "en-US",
      "gender": "female",
      "event_types": ["start", "marker", "end"]
    }]
  },

  "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.1.1.slim.min.js https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js; object-src 'self'",

  "web_accessible_resources": [
    "icons/*",
    "omnibox/*",
    "pages/*",
    "_locales/*",
    "https://endpoint.heartbank.cloud/*"
  ],

  "permissions": [
    "alarms",
    "cookies",
    "geolocation",
    "notifications",
    "storage",
    "unlimitedStorage",
    "ttsEngine"
  ],

  "optional_permissions": [
    "tabs",
    "activeTab",
    "webRequest"
  ]
}
